{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "types": ["node"],
    "lib": ["esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
